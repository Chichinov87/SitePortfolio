@model FullBlog

@{
    ViewData["Title"] = "Блоги";
}

<h1>Блоги</h1>

<p>
    <a asp-action="Create" class="LinkBlock">Создать блог</a>
</p>

<div class="row block">
    @foreach (var item in Model.Blog)
    {
        <div class="col-md-4">
            <div class="InBlock listBlock">
                <div class="contentBlock">
                    <h5 class="textBlock"><a asp-action="Details" asp-route-id="@item.IdBlog" class="LinkBlock">@item.NameBlog</a></h5>
                    <p class="textBlock">
                        @item.TextBlog
                    </p>
                </div>
                <hr/>
                <div class="contentBlock">
                    @foreach (var elem in Model.Image)
                    {
                        if (elem.IdBlog == @item.IdBlog)
                        {
                            if (item.MainImg == elem.IdImg)
                            {
                                <div class="imgBlock"><img style='height:60px;' src="data:image/jpeg;base64,@(Convert.ToBase64String(elem.DataImg))" /></div>
                            }
                        }
                    }
                    <p>@item.DateBlog</p>
                    <a asp-action="Details" asp-route-id="@item.IdBlog" class="LinkBlock">Просмотр</a>
                </div>
            </div>
        </div>
    }
</div>
