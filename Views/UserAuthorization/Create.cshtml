@model SytePortfolio.CreateUser
@{
    ViewData["Title"] = "Регистрация пользователя";
}

<h1>Регистрация</h1>
<ol>
    <li>Поля не могут быть пустыми</li>
    <li>Можно использовать только буквы и цифры латинского алфавита</li>
    <li>Длина логина или пароля должна составлять от 5 до 30 символов</li>
    <li>Пароли должны совпадать</li>
</ol>

@Html.ValidationSummary(true)
@if (ViewBag.er != null)
{<b style="color: red">@ViewBag.er</b>}
<hr />
<div class="row ">
    <div class="col-md-4">
        <div class="authorization">
            <form asp-action="Create" enctype="multipart/form-data" method="post">
                <div class="text-danger"></div>
                <input asp-for="IdUser" class="form-control" type="hidden" value="0" />
                <div class="form-group">
                    <label asp-for="LoginUser" class="control-label">Введите логин</label>
                    <input asp-for="LoginUser" class="form-control textInput" placeholder="Введите логин" />
                    @Html.ValidationMessageFor(model => model.LoginUser)
                    <span asp-for="login" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="password1" class="control-label">Введите пароль</label>
                    <input asp-for="password1" class="form-control textInput" type="password" placeholder="Введите пароль" />
                    @Html.ValidationMessageFor(model => model.password1)
                    <span asp-for="password1" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="password2" class="control-label">Подтвердите пароль</label>
                    <input asp-for="password2" class="form-control textInput" type="password" placeholder="Подтвердите пароль" />
                    @Html.ValidationMessageFor(model => model.password2)
                    <span asp-for="password2" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Отправить" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

<div style="padding: 20px 0">
    <div>
        <a asp-controller="UserAuthorization" asp-action="Index" class="LinkBlock">Вход</a>
    </div>
    
    <div>
        <a asp-controller="Home" asp-action="Index" class="LinkBlock">Вернуться на главную страницу</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
