@model SytePortfolio.UserAuthorization

@{
    ViewData["Title"] = "Вход";
}

@if(ViewBag.Nice != null)
{
    <b style="color: green">@ViewBag.Nice</b>
}

<h1>Вход</h1>
@if(ViewBag.er != null)
{
    <i style="color: red">@ViewBag.er </i>
}
<div class="row ">
    <div class="col-md-4">
        <div class="authorization">
            <form asp-action="Entrance">

                <div class="form-group">
                    <label asp-for="LoginUser" class="control-label">Введите логин</label>
                    <input asp-for="LoginUser" class="form-control textInput" placeholder="Введите логин"/>
                    <span asp-for="LoginUser" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="HashPassword" class="control-label">Введите пароль</label>
                    <input asp-for="HashPassword" class="form-control textInput" type="password" placeholder="Введите пароль" />
                    <span asp-for="HashPassword" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Отправить" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>
<div style="padding: 20px 0">
    <div>
        <a asp-controller="UserAuthorization" asp-action="Create" class="LinkBlock">Регистрация</a>
    </div>
    <div>
        <a asp-controller="Home" asp-action="Index" class="LinkBlock">Вернуться на главную страницу</a>
    </div>
</div>
